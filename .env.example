# ===========================================
# Jira AI Co-pilot - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Jira Configuration
# -------------------------------------------
JIRA_URL=https://your-instance.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-api-token

# Project settings
JIRA_PROJECT_KEY=PROJ
JIRA_BOARD_ID=1

# Custom Fields Mapping (find these in Jira Admin > Issues > Custom Fields)
# These IDs vary per Jira instance - check your instance!
JIRA_STORY_POINTS_FIELD=customfield_10016
JIRA_EPIC_LINK_FIELD=customfield_10014
JIRA_SPRINT_FIELD=customfield_10020

# -------------------------------------------
# LLM Configuration (Gemini)
# -------------------------------------------
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-gemini-api-key
LLM_MODEL=gemini-2.0-flash

# -------------------------------------------
# Application Settings
# -------------------------------------------
LOG_LEVEL=INFO
SYNC_INTERVAL_MINUTES=30

# Privacy: pseudonymize developer names in outputs
ANONYMIZE_DEVELOPERS=true

# -------------------------------------------
# Database
# -------------------------------------------
DATABASE_PATH=data/jira.duckdb

# -------------------------------------------
# Feature Flags (optional)
# -------------------------------------------
ENABLE_WORKLOG_SYNC=true
ENABLE_LLM_FEATURES=true
